{{#partial "content"}}

    <div class="row">
        <div class="col">
            <div class="card bg-white" style="width: 33rem; background-color: #98ff98">
                <div class="card-header bg-white">
                     <h3 class="text-center">This Clan</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{clan.clanName}}</li>
                        <li class="list-group-item">{{clan.total_members}}</li>
                        <li class="list-group-item">{{clan.clanDescription}}</li>
                        <li class="list-group-item">{{clan.clanSize}}</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col">
            <img src="images(1).png" alt="">
        </div>
    </div>


{{/partial}}
