{{#partial "content"}}

    <table class="table table-striped" style="background-color: #98ff98">
        <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">name</th>
            <th scope="col">species</th>
            <th scope="col">view details</th>
        </tr>
        </thead>
        <tbody>
        {{#each users}}
            <tr>
                <th scope="row">1</th>
                <td>{{name}}</td>
                <td>{{species}}</td>
                <td><a href="/users/{{id}}"><i class="fa fa-eye text-info"></i></a></td>
            </tr>
        {{/each}}

        </tbody>
    </table>


{{/partial}}

{{>layout.hbs}}